<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorBackgroundButton"
    app:cardCornerRadius="@dimen/default_card_radius"
    app:cardUseCompatPadding="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mod_2"
            android:layout_marginTop="@dimen/mod_2"
            android:layout_marginEnd="@dimen/mod_2">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_profile_avatar"
                android:layout_width="@dimen/image_size_med"
                android:layout_height="@dimen/image_size_med"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_card_title_margin"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Courtesy of"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_caption" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_body_1"
                    app:chipIcon="@drawable/ic_globe"
                    tools:text="Jeremy Long" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_profile_url"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jeremylong"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_caption"
                    app:chipBackgroundColor="@color/colorCustomBlackSecondary"
                    app:chipIcon="@drawable/ic_globe"
                    app:chipIconTint="@color/colorWhite" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </FrameLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/mod_2"
            android:orientation="vertical"
            android:padding="@dimen/mod_2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_body_1"
                tools:text="DependencyCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_project_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mod_2"
                android:ellipsize="end"
                android:maxLength="120"
                android:maxLines="3"
                android:textColor="@color/colorWhite"
                tools:text="OWASP dependency-check is a software composition analysis utility that detects publicly disclosed vulnerabilities in application dependencies" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_project_url"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Learn more"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_caption"
                app:chipBackgroundColor="@color/colorCustomBlackSecondary"
                app:chipIcon="@drawable/ic_globe"
                app:chipIconTint="@color/colorWhite" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>